            <!-- About Start -->
            <div class="about">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-5 col-md-6">
                            <div class="about-img">
                                <img src="img/IMG_5845.png" alt="IMG_5845" class="rounded img-fluid">
                            </div>
